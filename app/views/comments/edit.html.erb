<h1>Edit Comment</h1>

<%= form_with(model: [@article, @comment], local: true) do |form| %>
  <div class="field">
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit "Update Comment" %>
  </div>
<% end %>

<%= link_to "Back", article_path(@article) %>
